@model IEnumerable<prjHouseWebAp.Models.評語>

@{
    ViewBag.Title = "評語管理";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2>評語管理</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.評語編號)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.圖示)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.說明)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.日期)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.評語編號)
        </td>
        <td>
            <img src="~/Images/@item.圖示" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.說明)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.日期)
        </td>
        <td>
            @Html.ActionLink("刪除", "HouseMsgDelete", new { id=item.評語編號} , new { @class = "btn btn-danger", onclick = "return confirm('請問要刪除嗎？');" })
        </td>
    </tr>
}

</table>
